resources
  @sprite sprite.png

app(color=0x468754, width=1280, height=720)
  text | CLICK ON THE BOTTLE!!!
    @font Comic Sans MS
    @size 40
    @color #fff
    @top 80
    @left 50

  block
    bottle
      @src sprite.png
      @scale .2
      @anchor .5
      @centerY
      @centerX
      @buttonMode on
      @interactive on
      @speed .1
      @on pointertap
        @addSpeed(1)
